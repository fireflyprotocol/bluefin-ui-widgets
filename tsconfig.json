{
	"compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "esnext"
    ],
    "sourceMap": false,
    "resolveJsonModule":true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "declaration":true,
    "baseUrl": "./src",
    "skipLibCheck":true,
    "paths": {
      "common": [
        "src/common/*"
      ],
       "constants": [
        "src/constants/*"
      ],
      "components": [
        "src/components/*"
      ],
      "hooks": [
        "src/hooks/*"
      ],
      "utils": [
        "src/utils/*"
      ],
      "assets": [
        "src/assets/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": [
    "typePatches"
  ],

} 
    